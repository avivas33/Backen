# Variables de entorno para producción
# Copia este archivo a .env y configura los valores reales

# Configuración de Cobalt (Pagos con tarjeta)
COBALT_BASE_URL=https://metrobank.cobalt.tech
COBALT_CLIENT_ID=tu_client_id_aqui
COBALT_CLIENT_SECRET=tu_client_secret_aqui

# Configuración de Yappy (Pagos móviles)
YAPPY_BASE_URL=https://apipagosbg.bgeneral.cloud
YAPPY_MERCHANT_ID=tu_merchant_id_aqui

# Configuración de Google reCAPTCHA
GOOGLE_RECAPTCHA_PROJECT_ID=tu_project_id
GOOGLE_RECAPTCHA_API_KEY=tu_api_key
GOOGLE_RECAPTCHA_SITE_KEY=tu_site_key

# Configuración de Resend (Email)
RESEND_API_KEY=tu_resend_api_key
RESEND_FROM_EMAIL=tu_email@dominio.com
RESEND_FROM_NAME=Tu Nombre

# URLs permitidas (separadas por comas)
ALLOWED_ORIGINS=https://selfservice.celero.network,https://celero.network

# Puerto para la aplicación
PORT=7262
ASPNETCORE_URLS=http://0.0.0.0:7262
